---
import Post from "./Post.astro";
import Longform from "./Longform.astro";
import PhotoEssay from "./PhotoEssay.astro";
import PhotoAlbum from "./PhotoAlbum.astro";
import Code from "./Code.astro";
import Timeline from "./Timeline.astro";
import Thread from "./Thread.astro";
import Datastory from "./Datastory.astro";
import Project from "./Project.astro";

const { post } = Astro.props;

const layouts = {
  post: Post,
  longform: Longform,
  "photo-essay": PhotoEssay,
  "photo-album": PhotoAlbum,
  code: Code,
  timeline: Timeline,
  thread: Thread,
  datastory: Datastory,
  project: Project,
};

const Component = layouts[post.data.layout] || Post;
---

<Component post={post} />
