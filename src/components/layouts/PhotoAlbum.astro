---
import type { CollectionEntry } from "astro:content";
import Lightbox from "../ui/Lightbox.astro";
import "../../styles/home.css";

interface Props {
  post: CollectionEntry<"photography" | "writing" | "datastories">;
}

const { post } = Astro.props;

// Glob all images from the library
const allImages = import.meta.glob(
  "/public/library/originals/**/*.{jpg,jpeg,png,webp,avif}"
);

// Filter images that belong to this project/container
const container = post.data.container || post.slug;
const filterPath = `/public/library/originals/${container}/`;

const imagePaths = Object.keys(allImages)
  .filter((path) => path.includes(filterPath))
  .sort((a, b) => a.localeCompare(b));

const images = imagePaths.map((path) => ({
  src: path.replace("/public", ""),
  caption: path.split("/").pop()?.replace(/\.[^/.]+$/, ""),
}));

const backgroundColor = post.data.backgroundColor || "#f9e4e4";
---

<div class="photo-album-layout" style={`--page-bg: ${backgroundColor};`}>
  <header class="album-header">
    <h1>{post.data.title}</h1>
    <p>{post.data.excerpt}</p>
  </header>

  <div class="album-grid">
    {images.map((img) => (
      <figure class="album-item">
        <img src={img.src} alt={img.caption || ""} loading="lazy" />
        {img.caption && <figcaption>{img.caption}</figcaption>}
      </figure>
    ))}
    {images.length === 0 && (
      <div class="no-images">
        <p>No images found in {filterPath}</p>
      </div>
    )}
  </div>

  <Lightbox selector=".album-grid" gallery={post.data.lightbox?.gallery} />
</div>

<script>
  // Update menubar background
  function refinePhotoAlbumContent() {
    const layout = document.querySelector('.photo-album-layout') as HTMLElement;
    if (layout) {
      // Background Sync
      const bgColor = getComputedStyle(layout).getPropertyValue('--page-bg');
      const header = document.querySelector('.site-header') as HTMLElement;
      if (header) {
        header.style.backgroundColor = bgColor;
        header.style.transition = 'background-color 0.3s ease';
        const headerInner = header.querySelector('.site-header-inner') as HTMLElement;
        if (headerInner) headerInner.style.backgroundColor = 'transparent';
      }
    }
  }

  refinePhotoAlbumContent();
  document.addEventListener('astro:page-load', refinePhotoAlbumContent);
</script>

<style>
  .photo-album-layout {
    min-height: 100vh;
    background: var(--page-bg, #f9e4e4);
    padding: 10rem 0 6rem;
  }

  .album-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .album-header h1 {
    font-family: "Fraunces", serif;
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .album-header p {
    color: #666;
  }

  /* Tight Masonry Grid */
  .album-grid {
    column-count: 5;
    column-gap: 0px;
    max-width: 80%;
    margin: 0 auto;
  }

  .album-item {
    break-inside: avoid;
    margin: 2px;
    padding: 0px;
    background: none;
    line-height: 0;
    display: block;
  }

  .album-item img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0;
  }

  .album-item figcaption {
    display: none;
  }

  .no-images {
    text-align: center;
    padding: 4rem;
    color: #666;
    grid-column: 1 / -1;
  }
</style>
