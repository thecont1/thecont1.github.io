---
import type { CollectionEntry } from "astro:content";
import Lightbox from "../ui/Lightbox.astro";
import "../../styles/home.css";

interface Props {
  post: CollectionEntry<"photography">;
}

const { post } = Astro.props;

// Glob all images from the library
const allImages = import.meta.glob(
  "/public/library/originals/**/*.{jpg,jpeg,png,webp,avif}"
);

// Filter images that belong to this project/container
const container = post.data.container || post.slug;
const filterPath = `/public/library/originals/${container}/`;

const imagePaths = Object.keys(allImages)
  .filter((path) => path.includes(filterPath))
  .sort((a, b) => a.localeCompare(b));

const images = imagePaths.map((path) => ({
  src: path.replace("/public", ""),
  caption: path.split("/").pop()?.replace(/\.[^/.]+$/, ""),
}));
---

<div class="photo-album-layout">
  <header class="album-header">
    <h1>{post.data.title}</h1>
    <p>{post.data.excerpt}</p>
  </header>

  <div class="album-grid">
    {images.map((img) => (
      <figure class="album-item">
        <img src={img.src} alt={img.caption || ""} loading="lazy" />
        {img.caption && <figcaption>{img.caption}</figcaption>}
      </figure>
    ))}
    {images.length === 0 && (
      <div class="no-images">
        <p>No images found in {filterPath}</p>
      </div>
    )}
  </div>

  <Lightbox selector=".album-grid" gallery={post.data.lightbox?.gallery} />
</div>

<style>
  .photo-album-layout {
    min-height: 100vh;
    background: #f9e4e4;
    padding: 6rem 0;
  }

  .album-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .album-header h1 {
    font-family: "Fraunces", serif;
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .album-header p {
    color: #666;
  }

  /* Tight Masonry Grid */
  .album-grid {
    column-count: 2;
    column-gap: 0px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .album-item {
    break-inside: avoid;
    margin: 0;
    background: none;
    padding: 3px;
    line-height: 0;
    display: block;
  }

  .album-item img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0;
  }

  .album-item figcaption {
    display: none;
  }

  .no-images {
    text-align: center;
    padding: 4rem;
    color: #666;
    grid-column: 1 / -1;
  }
</style>
