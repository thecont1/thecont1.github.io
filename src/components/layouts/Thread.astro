---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"writing" | "essays">;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<article class="thread-layout">
  <header class="thread-header">
    <div class="avatar-placeholder"></div>
    <div class="meta">
      <h1>Mahesh Shantaram</h1>
      <span class="handle">@thecontrarian</span>
    </div>
  </header>

  <div class="thread-content">
    <!-- Intro Tweet -->
    <div class="tweet main-tweet">
      <p class="tweet-text lead">{post.data.title}</p>
      {post.data.excerpt && <p class="tweet-text">{post.data.excerpt}</p>}
    </div>

    <!-- Thread line connector -->
    <div class="thread-spine"></div>

    <!-- Content rendered as thread items -->
    <div class="tweet-stream">
      <Content />
    </div>
  </div>
</article>

<style>
  .thread-layout {
    max-width: 600px;
    margin: 6rem auto;
    padding: 0 1.5rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .thread-header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
  }

  .avatar-placeholder {
    width: 48px;
    height: 48px;
    background: #333;
    border-radius: 50%;
    margin-right: 12px;
  }

  .meta h1 {
    font-size: 1rem;
    font-weight: 700;
    margin: 0;
  }

  .handle {
    font-size: 0.9rem;
    color: var(--muted);
  }

  .tweet {
    padding: 1rem 0;
    position: relative;
    background: var(--paper); /* Mask spine */
    margin-bottom: 1rem;
  }

  .tweet-text {
    font-size: 1.25rem;
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  .lead {
    font-weight: 600;
  }

  /* Style paragraphs from markdown as individual tweets */
  .tweet-stream :global(p) {
    font-size: 1.15rem;
    line-height: 1.5;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--hairline);
  }

  .tweet-stream :global(img) {
    width: 100%;
    border-radius: 12px;
    border: 1px solid var(--hairline-2);
    margin-top: 0.5rem;
  }
</style>
