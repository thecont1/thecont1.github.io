---
import type { CollectionEntry } from "astro:content";
import "../../styles/home.css";

interface Props {
  post: CollectionEntry<"photography" | "writing" | "datastories">;
}

const { post } = Astro.props;
const { Content } = await post.render();

// Glob all images from the library
const allImages = import.meta.glob(
  "/public/library/originals/**/*.{jpg,jpeg,png,webp,avif}"
);

// Filter images that belong to this project/container
const container = post.data.container || post.slug;
const filterPath = `/public/library/originals/${container}/`;

const imagePaths = Object.keys(allImages)
  .filter((path) => path.includes(filterPath))
  .sort((a, b) => a.localeCompare(b));

const images = imagePaths.map((path) => ({
  src: path.replace("/public", ""),
  caption: path.split("/").pop()?.replace(/\.[^/.]+$/, ""),
}));

const backgroundColor = post.data.backgroundColor || "var(--surface)";
---

<div class="timeline-layout" style={`--page-bg: ${backgroundColor};`}>
  <header class="timeline-header">
    <h1>{post.data.title}</h1>
    <p class="instruction">Scroll &rarr;</p>
  </header>

  <div class="timeline-scroll-container">
    <div class="timeline-track">
      
      <!-- Intro Card with Text Content -->
      <article class="timeline-card intro-card">
        {post.data.excerpt && <p class="lead">{post.data.excerpt}</p>}
        <div class="timeline-text">
          <Content />
        </div>
      </article>

      <!-- Images as Timeline Events -->
      {images.map((img) => (
        <figure class="timeline-card image-card">
          <img src={img.src} alt={img.caption || ""} loading="lazy" />
          {img.caption && <figcaption>{img.caption}</figcaption>}
        </figure>
      ))}

    </div>
  </div>
</div>

<script>
  // Update menubar background
  function refineTimelineContent() {
    const article = document.querySelector('.timeline-layout') as HTMLElement;
    if (article) {
      // Background Sync
      const bgColor = getComputedStyle(article).getPropertyValue('--page-bg');
      const header = document.querySelector('.site-header') as HTMLElement;
      if (header) {
        header.style.backgroundColor = bgColor;
        header.style.transition = 'background-color 0.3s ease';
        const headerInner = header.querySelector('.site-header-inner') as HTMLElement;
        if (headerInner) headerInner.style.backgroundColor = 'transparent';
      }
    }
  }

  refineTimelineContent();
  document.addEventListener('astro:page-load', refineTimelineContent);
</script>

<style>
  .timeline-layout {
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background: var(--page-bg, var(--surface));
  }

  .timeline-header {
    padding: 1rem 2rem;
    background: var(--paper);
    border-bottom: 1px solid var(--hairline);
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
    flex-shrink: 0;
  }

  .timeline-header h1 {
    font-family: "Fraunces", serif;
    font-size: 1.2rem;
    margin: 0;
  }

  .instruction {
    font-family: "DM Sans", sans-serif;
    color: var(--muted);
    font-size: 0.9rem;
  }

  .timeline-scroll-container {
    flex: 1;
    overflow-x: auto;
    overflow-y: hidden;
    display: flex;
    align-items: center;
    scroll-snap-type: x mandatory;
    scrollbar-width: none; 
    -ms-overflow-style: none;
    padding: 0 2rem; /* Start padding */
  }

  .timeline-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .timeline-track {
    display: flex;
    gap: 4rem;
    height: 70vh;
    align-items: center;
    padding-right: 4rem; /* End padding */
  }

  .timeline-card {
    flex: 0 0 auto;
    width: min(85vw, 500px);
    max-height: 100%;
    background: var(--paper);
    border: 1px solid var(--hairline-2);
    box-shadow: var(--shadow-elev-1);
    scroll-snap-align: center;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .intro-card {
    padding: 2.5rem;
    overflow-y: auto;
    justify-content: center;
  }

  .lead {
    font-family: "Fraunces", serif;
    font-size: 1.4rem;
    margin-bottom: 1.5rem;
    color: var(--ink);
  }

  .timeline-text {
    font-family: "Inter", sans-serif;
    line-height: 1.6;
    color: var(--muted);
  }

  .timeline-text :global(p) {
    margin-bottom: 1rem;
  }

  .image-card {
    padding: 0.75rem;
    width: auto;
    max-width: 85vw;
  }

  .image-card img {
    height: 60vh;
    width: auto;
    max-width: 100%;
    object-fit: contain;
    display: block;
  }

  .image-card figcaption {
    margin-top: 0.75rem;
    font-family: "DM Sans", sans-serif;
    font-size: 0.9rem;
    color: var(--muted);
    text-align: center;
  }
</style>
