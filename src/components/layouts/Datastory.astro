---
import type { CollectionEntry } from "astro:content";
import Lightbox from "../ui/Lightbox.astro";
import ScreenToggle from "../ui/ScreenToggle.astro";
import C2PAOverlay from "../ui/C2PAOverlay.astro";
import ContentsToggle from "../ui/ContentsToggle.astro";
import fs from "node:fs";
import path from "node:path";

interface Props {
  post: CollectionEntry<"datastory">;
}

const { post } = Astro.props;
const { Content } = await post.render();

const backgroundColor = post.data.backgroundColor || "var(--surface)";
const formattedDate = post.data.date?.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Read notebook HTML from the sibling .notebook.html file.
// This file is generated by render_notebook.py and kept separate from the
// .md to prevent Astro's markdown renderer from corrupting code cells
// containing HTML-like strings (<td>, <tr>, etc.).
let notebookHtml = "";
interface TocEntry { slug: string; text: string; }
const tocEntries: TocEntry[] = [];

const contentBase = path.resolve("src/content/datastory");
const htmlPath = path.join(contentBase, post.id.replace(/\.mdx?$/, ".notebook.html"));
if (fs.existsSync(htmlPath)) {
  notebookHtml = fs.readFileSync(htmlPath, "utf-8").trim();

  // Parse h2 headings from notebook HTML for ToC
  const h2Re = /<h2[^>]*id=["']([^"']*)["'][^>]*>(.*?)<\/h2>/gi;
  let match: RegExpExecArray | null;
  while ((match = h2Re.exec(notebookHtml)) !== null) {
    const slug = match[1];
    // Strip HTML tags from heading text
    const text = match[2].replace(/<[^>]*>/g, "").replace(/\u00b6/g, "").trim();
    if (text) tocEntries.push({ slug, text });
  }
}
---

<!-- KaTeX for LaTeX math rendering in notebooks -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" crossorigin="anonymous">
<script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.js" crossorigin="anonymous"></script>
<script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/contrib/auto-render.min.js" crossorigin="anonymous"></script>

<article class="datastory-layout" style={`--page-bg: ${backgroundColor};`}>
  <header class="post-header datastory-header">
    <div class="post-kicker">
      <span class="collection-type">Data Story</span>
    </div>
    <h1 class="post-title">{post.data.title}</h1>
    {post.data.subtitle && <p class="post-subtitle">{post.data.subtitle}</p>}
    <div class="post-author-line">
      <span class="by">By</span>
      <span class="author-name">{post.data.author}</span>
    </div>
    {formattedDate && (
      <div class="post-date-line">
        <time datetime={post.data.date?.toISOString()}>{formattedDate}</time>
      </div>
    )}
    {post.data.showhero !== false && post.data.heroImage && (
      <figure class="post-hero">
        <img src={post.data.heroImage} alt={post.data.title} />
      </figure>
    )}
  </header>

  <div class="datastory-container">
    {post.data.toc && tocEntries.length > 0 && (
      <ContentsToggle title={post.data.title}>
        <ul>
          {tocEntries.map((h) => (
            <li><a href={`#${h.slug}`}>{h.text}</a></li>
          ))}
        </ul>
      </ContentsToggle>
    )}

    <!-- Author prose from markdown (above the markers) -->
    <div class="datastory-prose">
      <Content />
    </div>

    <!-- Notebook HTML injected raw, bypassing markdown renderer -->
    {notebookHtml && (
      <div class="notebook-wrapper" set:html={notebookHtml} />
    )}
  </div>

  <Lightbox selector=".notebook-wrapper" gallery={post.data.lightbox?.gallery} />
  <ScreenToggle />
  <C2PAOverlay />
</article>

<script>
  // Update menubar background to dark grey for datastory pages
  function refineDatastoryContent() {
    const header = document.querySelector('.site-header') as HTMLElement;
    if (header) {
      header.style.backgroundColor = '#2a2a2a';
      header.style.transition = 'background-color 0.3s ease';
      const headerInner = header.querySelector('.site-header-inner') as HTMLElement;
      if (headerInner) headerInner.style.backgroundColor = 'transparent';
      // Make nav links and icons visible against dark background
      header.querySelectorAll('a, button').forEach((el) => {
        (el as HTMLElement).style.color = '#fff';
      });
      header.querySelectorAll('.site-logo, .site-logo a').forEach((el) => {
        (el as HTMLElement).style.color = '#fff';
      });
    }
  }

  refineDatastoryContent();
  document.addEventListener('astro:page-load', refineDatastoryContent);

  // Render LaTeX math in notebook output cells via KaTeX auto-render
  function renderNotebookMath() {
    const wrapper = document.querySelector('.notebook-wrapper');
    if (!wrapper || typeof window.renderMathInElement !== 'function') return;
    window.renderMathInElement(wrapper, {
      delimiters: [
        { left: "$$", right: "$$", display: true },
        { left: "$", right: "$", display: false },
        { left: "\\(", right: "\\)", display: false },
        { left: "\\[", right: "\\]", display: true },
      ],
      throwOnError: false,
    });
  }

  // KaTeX scripts are deferred — wait for them to load
  if (document.readyState === 'complete') {
    renderNotebookMath();
  } else {
    window.addEventListener('load', renderNotebookMath);
  }
  document.addEventListener('astro:page-load', () => {
    // Small delay to ensure KaTeX scripts are available after navigation
    setTimeout(renderNotebookMath, 100);
  });
</script>

<style>
  .datastory-layout {
    width: 100%;
    min-height: 100vh;
    background: var(--page-bg, var(--surface));
  }

  .datastory-header {
    background: var(--paper);
    padding: 8rem 2rem 4rem;
    text-align: center;
    border-bottom: 1px solid var(--hairline);
  }

  .post-kicker {
    font-family: "Inter", sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent, #d04b36);
    margin: 0 auto 2.25rem;
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    align-items: center;
  }

  .post-kicker .collection-type {
    color: var(--accent, #d04b36);
  }

  .post-title {
    font-family: "Fraunces", serif;
    font-size: clamp(3.2rem, 7.5vw, 5.2rem);
    line-height: 0.98;
    font-weight: 300;
    letter-spacing: -0.015em;
    margin: 0 auto 1.75rem;
    max-width: 900px;
  }

  .post-subtitle {
    font-family: "Fraunces", serif;
    font-size: 1.55rem;
    line-height: 1.45;
    font-style: italic;
    color: rgba(0, 0, 0, 0.7);
    max-width: 52ch;
    margin: 0.25rem auto 2.25rem;
  }

  .post-author-line {
    font-family: "Inter", sans-serif;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--muted);
    margin-bottom: 0.8rem;
  }

  .post-author-line .by {
    margin-right: 0.45em;
    font-weight: 500;
  }

  .post-author-line .author-name {
    font-weight: 600;
    color: var(--ink);
  }

  .post-date-line {
    font-family: "Inter", sans-serif;
    font-size: 0.82rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: 2rem;
  }

  .post-hero {
    margin: 4rem auto 0;
    max-width: 1000px;
  }

  .post-hero img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 4px;
    box-shadow: var(--shadow-elev-1);
  }

  .datastory-container {
    padding: 4rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Author prose */
  .datastory-prose {
    max-width: 800px;
    margin: 0 auto 3rem;
    font-family: "Inter", sans-serif;
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--ink);
  }

  .datastory-prose :global(p) {
    margin-bottom: 1.5rem;
  }

  /* Notebook wrapper — asymmetric: leave space on left for ToC tab */
  .notebook-wrapper {
    background: var(--paper);
    padding: 2rem 3rem;
    border: 1px solid var(--hairline-2);
    box-shadow: var(--shadow-elev-1);
    border-radius: 4px;
    overflow-x: auto;
    box-sizing: border-box;
    margin-left: 60px;
    margin-right: 1rem;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (max-width: 1200px) {
    .notebook-wrapper {
      margin-left: 2rem;
      margin-right: 1rem;
    }
  }

  @media (max-width: 768px) {
    .notebook-wrapper {
      margin-left: 0.5rem;
      margin-right: 0.5rem;
      padding: 1rem;
    }
  }

  /* Hide pilcrow (¶) anchor links from nbconvert */
  .notebook-wrapper :global(.anchor-link),
  .notebook-wrapper :global(a[class*="anchor"]) {
    display: none !important;
  }

  /* ===========================================================
     NOTEBOOK-SPECIFIC STYLES
     Targets nbconvert "classic" template output structures.
     =========================================================== */

  /* Markdown cells */
  .notebook-wrapper :global(h1),
  .notebook-wrapper :global(h2),
  .notebook-wrapper :global(h3),
  .notebook-wrapper :global(h4),
  .notebook-wrapper :global(h5),
  .notebook-wrapper :global(h6) {
    font-family: "Fraunces", serif;
    color: var(--ink);
    line-height: 1.3;
  }

  .notebook-wrapper :global(h1) {
    font-size: 2rem;
    margin: 2.5rem 0 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--hairline);
  }

  .notebook-wrapper :global(h2) {
    font-size: 1.6rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.4rem;
    border-bottom: 1px solid var(--hairline-2);
  }

  .notebook-wrapper :global(h3) {
    font-size: 1.3rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .notebook-wrapper :global(p) {
    font-family: "Inter", sans-serif;
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: 1.25rem;
    color: var(--ink);
  }

  .notebook-wrapper :global(a) {
    color: var(--accent, #d04b36);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .notebook-wrapper :global(a:hover) {
    border-bottom-color: var(--accent, #d04b36);
  }

  /* Code cells — input */
  .notebook-wrapper :global(.input_area pre),
  .notebook-wrapper :global(.jp-InputArea pre),
  .notebook-wrapper :global(pre) {
    background: #f7f7f7 !important;
    padding: 1.25rem;
    border-radius: 6px;
    border: 1px solid var(--hairline-2);
    overflow-x: auto;
    margin: 1rem 0;
    font-family: "Fira Code", "JetBrains Mono", "SF Mono", monospace;
    font-size: 0.85rem;
    line-height: 1.55;
  }

  .notebook-wrapper :global(code) {
    font-family: "Fira Code", "JetBrains Mono", "SF Mono", monospace;
    font-size: 0.88em;
  }

  /* Inline code */
  .notebook-wrapper :global(:not(pre) > code) {
    background: #f0f0f0;
    padding: 0.15em 0.4em;
    border-radius: 3px;
    font-size: 0.88em;
  }

  /* Input/output prompt labels */
  .notebook-wrapper :global(.prompt),
  .notebook-wrapper :global(.jp-InputPrompt),
  .notebook-wrapper :global(.jp-OutputPrompt) {
    font-family: "Fira Code", monospace;
    font-size: 0.75rem;
    color: var(--muted-2, #999);
    min-width: 5em;
  }

  /* Output cells — text */
  .notebook-wrapper :global(.output_text pre),
  .notebook-wrapper :global(.jp-OutputArea-output pre) {
    background: transparent !important;
    border: none;
    padding: 0.5rem 0;
    color: var(--ink);
    font-size: 0.82rem;
  }

  /* Output cells — images (matplotlib, seaborn charts) */
  .notebook-wrapper :global(.output_png img),
  .notebook-wrapper :global(.output_jpeg img),
  .notebook-wrapper :global(.jp-RenderedImage img) {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 1.5rem auto;
    border-radius: 4px;
    box-shadow: var(--shadow-elev-1);
    /* Preserve 300 DPI sharpness when downscaling chart images */
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  /* Ensure ALL images inside the wrapper are constrained */
  .notebook-wrapper :global(img) {
    max-width: 100%;
    height: auto;
  }

  /* Pandas DataFrames — HTML table output */
  .notebook-wrapper :global(.dataframe),
  .notebook-wrapper :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-family: "Inter", sans-serif;
    font-size: 0.88rem;
    overflow-x: auto;
    display: block;
  }

  .notebook-wrapper :global(.dataframe th),
  .notebook-wrapper :global(table th) {
    background: var(--surface);
    font-weight: 600;
    text-align: left;
    padding: 0.6rem 0.8rem;
    border-bottom: 2px solid var(--hairline);
    white-space: nowrap;
  }

  .notebook-wrapper :global(.dataframe td),
  .notebook-wrapper :global(table td) {
    padding: 0.5rem 0.8rem;
    border-bottom: 1px solid var(--hairline-2);
    white-space: nowrap;
  }

  .notebook-wrapper :global(.dataframe tbody tr:hover),
  .notebook-wrapper :global(table tbody tr:hover) {
    background: rgba(0, 0, 0, 0.02);
  }

  /* Scoped styles from pandas — allow them to work but constrain */
  .notebook-wrapper :global(style) {
    display: none;
  }

  /* nbconvert cell containers */
  .notebook-wrapper :global(.cell) {
    margin-bottom: 1.5rem;
  }

  .notebook-wrapper :global(.inner_cell) {
    width: 100%;
  }

  /* Hide raw cell output metadata */
  .notebook-wrapper :global(.output_area .output_subarea) {
    max-width: 100%;
    overflow-x: auto;
  }

  /* Horizontal rules in notebook markdown */
  .notebook-wrapper :global(hr) {
    border: none;
    border-top: 1px solid var(--hairline);
    margin: 2.5rem 0;
  }

  /* Lists in notebook markdown */
  .notebook-wrapper :global(ul),
  .notebook-wrapper :global(ol) {
    padding-left: 1.5em;
    margin-bottom: 1.25rem;
  }

  .notebook-wrapper :global(li) {
    margin-bottom: 0.4em;
    line-height: 1.6;
  }

  /* Blockquotes in notebook markdown */
  .notebook-wrapper :global(blockquote) {
    border-left: 3px solid var(--accent, #d04b36);
    margin: 1.5rem 0;
    padding: 0.75rem 1.25rem;
    color: var(--muted);
    font-style: italic;
  }

  /* Images embedded in notebook markdown (not chart outputs) */
  .notebook-wrapper :global(.text_cell img),
  .notebook-wrapper :global(.jp-RenderedHTMLCommon img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1rem 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .datastory-header {
      padding: 6rem 1rem 2rem;
    }

    .post-title {
      font-size: clamp(2.2rem, 10vw, 3rem);
      line-height: 1.02;
    }

    .post-subtitle {
      font-size: 1.2rem;
      margin-bottom: 1.5rem;
    }

    .post-date-line {
      margin-bottom: 1.5rem;
    }

    .datastory-container {
      padding: 2rem 1rem;
    }

    .notebook-wrapper {
      padding: 1rem;
    }

    .notebook-wrapper :global(.dataframe),
    .notebook-wrapper :global(table) {
      font-size: 0.78rem;
    }

    .notebook-wrapper :global(pre) {
      font-size: 0.78rem;
      padding: 0.75rem;
    }
  }
</style>
