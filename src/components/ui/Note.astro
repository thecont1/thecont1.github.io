<blockquote class="note-aside">
  <div class="note-content">
    <slot />
  </div>
</blockquote>

<style>
  .note-aside {
    float: right;
    clear: right;
    width: 280px;
    margin: 0.5rem 0 1.5rem 2rem;
    padding: 1.25rem;
    background: rgba(var(--accent-rgb, 0, 0, 0), 0.03);
    border: 1px solid var(--hairline);
    border-left: 3px solid var(--accent);
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--ink);
    font-family: var(--font-sans, "Inter", sans-serif);
    border-radius: 4px;
    position: relative;
    z-index: 10;
  }

  .note-aside :global(p) {
    margin: 0rem;
  }

  .note-aside :global(p + p) {
    margin-top: 0.75rem;
  }

  /* Responsive behavior */
  @media (max-width: 1024px) {
    .note-aside {
      float: none;
      width: auto;
      margin: 2rem 0;
    }
  }
</style>
