---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("datascience", ({ data }) => data.status === "published");
---

<Layout title="Data Science">
  <section class="page-header">
    <h1>Data Science</h1>
  </section>
  
  <div class="grid">
    {posts.map((post) => (
      <article class="card">
        <a href={`/datascience/${post.slug}`}>
          {post.data.heroImage && <img src={post.data.heroImage} alt={post.data.title} />}
          <h2>{post.data.title}</h2>
          <p>{post.data.excerpt}</p>
        </a>
      </article>
    ))}
  </div>
</Layout>

<style>
  .page-header {
    padding: 8rem 6vw 4rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0 6vw 4rem;
  }
  .card img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
    margin-bottom: 1rem;
  }
  .card a {
    text-decoration: none;
    color: inherit;
  }
  .card p {
    color: var(--muted);
  }
</style>
