---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Longform from "../../components/layouts/Longform.astro";
import StructuredData from "../../components/StructuredData.astro";

export const prerender = true;

export async function getStaticPaths() {
  const longforms = await getCollection("longform", ({ data }) => {
    return data.status === "published";
  });
  return longforms.map((longform) => ({
    params: { slug: longform.slug },
    props: { longform },
  }));
}

const { longform } = Astro.props;
const tags = [...(longform.data.theme || []), ...(longform.data.geography || [])];
---

<Layout 
  title={longform.data.title}
  description={longform.data.subtitle}
  image={longform.data.heroImage}
  type="article"
  publishedTime={longform.data.date}
  author={longform.data.author}
  tags={tags}
>
  <Fragment slot="head">
    <StructuredData 
      type="article"
      title={longform.data.title}
      description={longform.data.subtitle}
      image={longform.data.heroImage}
      publishedTime={longform.data.date}
      author={longform.data.author}
      section={longform.data.category}
      tags={tags}
      breadcrumbs={[
        { name: "Home", url: "/" },
        { name: "Longform", url: "/longform/" },
        { name: longform.data.title, url: `/longform/${longform.slug}/` }
      ]}
    />
  </Fragment>
  <Longform post={longform} />
</Layout>
